<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdx.dao.system.DeptDao">
    <resultMap id="BaseResultMap" type="com.cdx.domain.system.Dept">
        <id column="dept_id" property="id"/>
        <result column="dept_name" property="deptName"/>
        <result column="state" property="state"/>
        <result column="company_id" property="companyId"/>
        <result column="company_name" property="companyName"/>
        <association property="parent" column="parent_id" javaType="com.cdx.domain.system.Dept"
                     select="com.cdx.dao.system.DeptDao.findById"></association>
    </resultMap>

    <!--根据企业id查询全部-->
    <select id="findAll" parameterType="string" resultMap="BaseResultMap">
        select * from pe_dept where company_id=#{companyId} and state = 1
    </select>

    <!--根据id查询-->
    <select id="findById" parameterType="java.lang.String" resultMap="BaseResultMap">
        select * from pe_dept where dept_id = #{id}
    </select>

    <!--根据id删除-->
    <delete id="delete" parameterType="java.lang.String">
        delete from pe_dept where dept_id = #{id}
    </delete>
    <!--逻辑删除-->
    <delete id="deleteState" parameterType="java.lang.String">
        update pe_dept set state = 0 where dept_id = #{id}
    </delete>

    <!--保存-->
    <insert id="save" parameterType="com.cdx.domain.system.Dept">
        insert into pe_dept (dept_id, dept_name, parent_id, state, company_id, company_name
          )
        values (#{id}, #{deptName}, #{parent.id}, #{state}, #{companyId}, #{companyName}
          )
    </insert>

    <!--更新-->
    <update id="update" parameterType="com.cdx.domain.system.Dept">
        update pe_dept
        set dept_name = #{deptName},
          parent_id = #{parent.id},
          state = #{state},
          company_id = #{companyId},
          company_name = #{companyName}
        where dept_id = #{id}
    </update>
</mapper>